<% layout("layouts/boilerplate") %>

<div class="container my-5 all_listings">
    <h2 class="mb-4">Search Results for "<%= query %>"</h2>

    <% if (searchResults.length === 0) { %>
        <p class="text-muted">No listings found for "<%= query %>". Try another location.</p>
    <% } else { %>
        <div class="row">
            <% for (listing of searchResults) { %>
                <div class="col-12 col-sm-6 col-md-6 col-lg-4 mb-4">
                    <div class="custom-card">
                        <a href="/listings/<%= listing._id %>">
                            <img src="<%= listing.image.url %>" alt="<%= listing.title %>" class="custom-card-img">
                            <div class="custom-card-body">
                                <p class="title"><%= listing.title %></p>
                                <p class="description"><%= listing.description %></p>
                                <p class="price">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
                            </div>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    <% } %>
</div>
